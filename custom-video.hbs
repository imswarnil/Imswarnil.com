{{!< default}}

{{#post}}
{{#contentFor "body-class"}} post-template-video{{/contentFor}}

<article class="content post tag-hash-video page">

    {{!-- SCOPED CSS --}}
    <style>
        /* --- Layout --- */
        .video-page-wrapper {
            width: 100%;
            max-width: var(--container-wide--width);
            margin: 0 auto;
            padding: 0 var(--layout--padding);
        }

        /* --- 1. Theater Mode Player --- */
        .video-player-container {
            width: 100%;
            aspect-ratio: 16/9;
            background-color: #000;
            border-radius: var(--radius-4);
            overflow: hidden;
            margin-top: var(--spacing-8);
            box-shadow: 0 20px 60px rgba(0,0,0,0.5);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .video-player-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.8; /* Dim image to make text pop or simulate player */
        }

        .play-btn-overlay {
            position: absolute;
            width: 80px; height: 80px;
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            color: #fff;
            border: 1px solid rgba(255,255,255,0.2);
            transition: transform 0.2s, background 0.2s;
            cursor: pointer;
        }
        .play-btn-overlay:hover {
            transform: scale(1.1);
            background: rgba(255,0,0,0.8); /* YouTube Redish style on hover */
            border-color: transparent;
        }

        /* --- 2. Grid Layout --- */
        .video-grid {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: var(--layout--gap);
            margin-top: var(--spacing-8);
            align-items: start;
        }

        /* --- Left: Meta Info --- */
        .video-header {
            border-bottom: 1px solid var(--color-border);
            padding-bottom: var(--spacing-6);
            margin-bottom: var(--spacing-7);
        }

        .video-tags {
            display: flex; gap: 10px; margin-bottom: 15px;
        }
        .video-tag {
            color: var(--ghost-accent-color);
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            background: var(--color-background-100);
            padding: 4px 10px;
            border-radius: 20px;
            text-decoration: none;
        }

        .video-title {
            font-family: var(--font-family-headings);
            font-size: clamp(1.5rem, 3vw, 2.2rem);
            font-weight: 800;
            line-height: 1.2;
            color: var(--color-contrast);
            margin: 0 0 15px 0;
        }

        .video-stats {
            display: flex; align-items: center; justify-content: space-between;
            color: var(--color-secondary);
            font-size: 0.9rem;
        }
        .stats-left { display: flex; gap: 15px; align-items: center; }
        
        /* Action Buttons */
        .video-actions { display: flex; gap: 10px; }
        .action-btn {
            background: var(--color-background-100);
            border: none; padding: 8px 16px; border-radius: 20px;
            font-size: 0.85rem; font-weight: 600;
            display: flex; align-items: center; gap: 6px;
            color: var(--color-foreground); cursor: pointer; transition: 0.2s;
        }
        .action-btn:hover { background: var(--color-background-200); color: var(--color-contrast); }

        /* --- Right: Sidebar (Watch Next) --- */
        .sidebar-sticky { position: sticky; top: 100px; }
        
        .watch-next-list {
            list-style: none; padding: 0; margin: 0;
        }
        
        .next-video-card {
            display: flex; gap: 12px;
            margin-bottom: 15px;
            text-decoration: none;
            group: 1;
        }
        
        .next-thumb {
            width: 140px; aspect-ratio: 16/9;
            border-radius: var(--radius-2);
            overflow: hidden; background: var(--color-background-200);
            flex-shrink: 0; position: relative;
        }
        .next-thumb img { width: 100%; height: 100%; object-fit: cover; transition: 0.2s; }
        .next-video-card:hover .next-thumb img { opacity: 0.9; }

        .duration-badge {
            position: absolute; bottom: 4px; right: 4px;
            background: rgba(0,0,0,0.8); color: #fff;
            font-size: 0.65rem; font-weight: 700;
            padding: 2px 4px; border-radius: 4px;
        }

        .next-info { flex: 1; min-width: 0; }
        .next-title {
            font-weight: 600; font-size: 0.95rem; color: var(--color-contrast);
            margin-bottom: 4px; line-height: 1.3;
            display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;
        }
        .next-meta { font-size: 0.75rem; color: var(--color-secondary); }

        /* Responsive */
        @media (max-width: 991px) {
            .video-grid { grid-template-columns: 1fr; }
            .next-video-card { align-items: flex-start; }
            .next-thumb { width: 120px; }
        }
    </style>

    <div class="video-page-wrapper">

        <!-- 1. THEATER PLAYER -->
        <div class="video-player-container">
            {{#if feature_image}}
                <img src="{{img_url feature_image size="xl"}}" alt="{{title}}">
                {{!-- Fake Play Button (Visual only, implies video click) --}}
                <div class="play-btn-overlay">
                    <svg width="32" height="32" fill="currentColor" viewBox="0 0 24 24"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                </div>
            {{else}}
                <div style="color: #555; font-weight: bold;">Video Placeholder</div>
            {{/if}}
            
            {{!-- 
                Note: To actually embed video, you would typically use code injection 
                or the content body here. 
            --}}
        </div>

        <!-- 2. CONTENT GRID -->
        <div class="video-grid">
            
            <!-- LEFT: Info & Description -->
            <div class="video-main">
                
                <div class="video-header">
                    <div class="video-tags">
                        {{#foreach tags limit="2"}}
                            <a href="{{url}}" class="video-tag">{{name}}</a>
                        {{/foreach}}
                    </div>
                    
                    <h1 class="video-title">{{title}}</h1>
                    
                    <div class="video-stats">
                        <div class="stats-left">
                            <span>{{reading_time}} watch</span>
                            <span>&bull;</span>
                            <span>{{date format="MMM D, YYYY"}}</span>
                        </div>
                        
                        <div class="video-actions">
                            <button class="action-btn">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>
                                Like
                            </button>
                            <button class="action-btn" data-popup-toggle="#popup-share">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="18" cy="5" r="3"></circle><circle cx="6" cy="12" r="3"></circle><circle cx="18" cy="19" r="3"></circle><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line></svg>
                                Share
                            </button>
                        </div>
                    </div>
                </div>

                {{!-- Author Row --}}
                <div style="display: flex; align-items: center; gap: 15px; margin-bottom: var(--spacing-8);">
                    <a href="{{primary_author.url}}" class="avatar avatar-large">
                        {{#if primary_author.profile_image}}
                            <img src="{{img_url primary_author.profile_image}}" alt="{{primary_author.name}}">
                        {{else}}
                            <span class="avatar" style="background:var(--color-background-200);">{{primary_author.name.[0]}}</span>
                        {{/if}}
                    </a>
                    <div>
                        <a href="{{primary_author.url}}" style="font-weight: 700; color: var(--color-contrast); text-decoration: none; display: block;">{{primary_author.name}}</a>
                        <span style="font-size: 0.8rem; color: var(--color-secondary);">12 Videos</span>
                    </div>
                    <div style="margin-left: auto;">
                        {{!-- Subscribe Button Component --}}
                        <a href="#subscribe" class="button button-sm" style="background: var(--color-contrast); color: var(--color-background);">Subscribe</a>
                    </div>
                </div>

                {{!-- Video Description --}}
                <div class="post-content">
                    {{content}}
                </div>

                {{!-- Comments --}}
                <div style="margin-top: var(--spacing-10);">
                    {{> "post/comments"}}
                </div>

            </div>

            <!-- RIGHT: Watch Next Sidebar -->
            <aside class="video-sidebar">
                <div class="sidebar-sticky">
                    
                    {{!-- Ad Unit --}}
                    <div style="margin-bottom: 30px;">
                         {{> "adsense" type="square" }}
                    </div>

                    <h3 style="font-size: 1.1rem; margin-bottom: 20px;">{{t "Watch Next"}}</h3>
                    
                    {{!-- Fetch Related Videos --}}
                    {{#get "posts" filter="tag:hash-video+id:-{{id}}" limit="6" include="tags"}}
                        <ul class="watch-next-list">
                            {{#foreach posts}}
                            <li>
                                <a href="{{url}}" class="next-video-card">
                                    <div class="next-thumb">
                                        {{#if feature_image}}
                                            <img src="{{img_url feature_image size="s"}}" alt="{{title}}">
                                        {{/if}}
                                        <span class="duration-badge">{{reading_time}}</span>
                                    </div>
                                    <div class="next-info">
                                        <div class="next-title">{{title}}</div>
                                        <div class="next-meta">
                                            {{#if primary_tag}}{{primary_tag.name}} &bull; {{/if}}
                                            {{date format="MMM YYYY"}}
                                        </div>
                                    </div>
                                </a>
                            </li>
                            {{/foreach}}
                        </ul>
                    {{else}}
                        <p style="color: var(--color-secondary); font-size: 0.9rem;">No more videos available.</p>
                    {{/get}}

                </div>
            </aside>

        </div>

    </div>

</article>
{{/post}}