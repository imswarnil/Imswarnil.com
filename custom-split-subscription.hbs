{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#is "post"}}
	{{#post}}
	{{!-- Everything inside the #post block pulls data from the page --}}

		{{#contentFor "body-class"}} post-template-split{{#> "with-sidebar"}} post-has-sidebar{{/"with-sidebar"}}{{#unless access}} post-locked{{/unless}}{{/contentFor}}

		<header class="post-header">
			{{!-- Media (featured image and video). --}}
			{{> "post/media"}}

			<div class="post-header-container">
				{{!-- Tags. --}}
				{{> "post/tags"}}

				{{!-- Title. --}}
				<h1 class="post-title">{{title}}</h1>

				{{!-- Excerpt --}}
				{{#if custom_excerpt}}
					<p class="post-excerpt">{{custom_excerpt}}</p>
				{{/if}}

				<div class="post-header-info">
					{{> "form-subscribe" label="true"}}

					{{!-- Buttons. --}}
					<div class="post-header-buttons">
						{{> "post/button-comments"}}
						{{> "post/button-share"}}
					</div>
				</div>
			</div>
		</header>

		{{!-- Content. --}}
		{{> "post/content" hide_tags=true}}

		{{!-- Read next. --}}
		{{> "post/read-next"}}

		{{!-- Subscription (show on --breakpoint-max-lg) --}}
		{{> "sections/subscription"}}

		{{!-- Comments. --}}
		{{> "post/comments"}}

	{{/post}}
{{else}}
	{{#page}}
	{{!-- Everything inside the #page block pulls data from the page --}}

		{{!-- Hero. --}}
		{{#if @page.show_title_and_feature_image}}
			{{> "sections/hero" image_size="600" show_subscription=true}}
		{{/if}}

		{{!-- Content. --}}
		{{> "post/content-page" split_template=true show_subscription=true}}
	{{/page}}
{{/is}}
