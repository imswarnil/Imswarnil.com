{{!-- 
    PARTIAL: sections/hero.hbs
    DESIGN: Grid Background, Clean Double Frame Image, No Tilt / No Social-on-image
--}}

{{#if hide_title}}
    <h1 class="screen-reader-text">{{title}}</h1>
{{else}}

<section class="hero-modern" itemscope itemtype="https://schema.org/Person">
    
    {{!-- 1. Background Grid with Corner Fade --}}
    <div class="hero-modern-bg" aria-hidden="true"></div>

    <div class="hero-modern-grid">
            
        {{!-- 2. CONTENT COLUMN --}}
        <div class="hero-modern-content">
            
            <p class="hero-greeting">
                <span class="wave">ðŸ‘‹</span> {{t "Hi, I'm"}}
            </p>

            <h1 class="hero-title" itemprop="name">{{title}}</h1>

            {{!-- Stacked Meta Info --}}
            <div class="hero-meta-stack">
                
                <div class="meta-row" itemprop="jobTitle">
                    <span class="meta-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </span>
                    <span class="meta-text">{{t "Creative Engineer & Filmmaker"}}</span>
                </div>

                <div class="meta-row" itemprop="worksFor" itemscope itemtype="https://schema.org/Organization">
                    <span class="meta-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                        </svg>
                    </span>
                    <span class="meta-text">{{t "Software Engineer"}} @ <strong itemprop="name">Imswarnil Studio</strong></span>
                </div>

                <div class="meta-row" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
                    <span class="meta-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                    </span>
                    <span class="meta-text">
                        <span itemprop="addressLocality">Bengaluru</span>, 
                        <span itemprop="addressCountry">India</span>
                    </span>
                </div>

            </div>

            {{!-- Excerpt --}}
            {{#if excerpt}}
                <p class="hero-bio" itemprop="description">{{excerpt}}</p>
            {{/if}}

            {{!-- Subscription Form --}}
            {{#unless hide_subscription}}
                <div class="hero-subscribe-wrapper">
                    {{> "form-subscribe" label=true}}
                </div>
            {{/unless}}

        </div>

        {{!-- 3. MEDIA COLUMN (Double Frame, No Tilt / No Social) --}}
        <div class="hero-modern-media">
            <div class="double-frame">
                {{#if feature_image}}
                <figure class="hero-image-fig">
                    <img 
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w"
                        src="{{img_url feature_image size="l"}}"
                        alt="{{title}}"
                        itemprop="image"
                        loading="eager"
                    >
                </figure>
                {{/if}}
            </div>
        </div>

    </div>
</section>

<style>
    /* --- 1. Container & Background --- */
    .hero-modern {
        position: relative;
        padding: var(--spacing-10) var(--spacing-6);
        background-color: var(--color-background);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Grid Lines with Corner Fade */
    .hero-modern-bg {
        position: absolute; inset: 0; pointer-events: none; z-index: 0;
        background-image: 
            linear-gradient(to right, rgba(128,128,128,0.06) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(128,128,128,0.06) 1px, transparent 1px);
        background-size: 32px 32px;
        mask-image: radial-gradient(circle at center, black 45%, transparent 100%);
        -webkit-mask-image: radial-gradient(circle at center, black 45%, transparent 100%);
    }

    /* Layout Grid */
    .hero-modern-grid {
        display: grid;
        grid-template-columns: minmax(0, 1.1fr) minmax(0, 420px); /* Text | Image */
        gap: var(--spacing-10);
        align-items: center;
        position: relative; 
        z-index: 1;
        max-width: 1120px;
        width: 100%;
        margin: 0 auto;
    }

    /* --- 2. Content Column --- */
    .hero-modern-content {
        display: flex; 
        flex-direction: column; 
        align-items: flex-start;
    }

    .hero-greeting {
        font-size: var(--font-small);
        font-weight: 700; 
        color: var(--ghost-accent-color);
        text-transform: uppercase; 
        letter-spacing: 1px;
        margin-bottom: var(--spacing-3);
    }

    .wave { 
        display: inline-block; 
        animation: wave 2.5s infinite; 
        transform-origin: 70% 70%; 
    }

    @keyframes wave { 
        0%,100%{transform:rotate(0deg);} 
        10%,30%{transform:rotate(14deg);} 
        20%{transform:rotate(-8deg);} 
        40%{transform:rotate(-4deg);} 
        50%{transform:rotate(10deg);} 
    }

    .hero-title {
        font-size: clamp(3rem, 6vw, 4.5rem);
        font-weight: 800; 
        line-height: 1;
        color: var(--color-contrast);
        margin-bottom: var(--spacing-6);
    }

    /* Meta Stack (New Lines) */
    .hero-meta-stack {
        display: flex; 
        flex-direction: column; 
        gap: 12px;
        margin-bottom: var(--spacing-8);
        border-left: 2px solid var(--color-border);
        padding-left: var(--spacing-5);
    }

    .meta-row {
        display: flex; 
        align-items: center; 
        gap: 12px;
        font-size: 1rem; 
        color: var(--color-foreground);
    }

    .meta-icon {
        color: var(--ghost-accent-color);
        display: flex; 
        align-items: center;
    }

    .meta-text strong { 
        color: var(--color-contrast); 
        font-weight: 700; 
    }

    .hero-bio {
        font-size: 1.15rem; 
        line-height: 1.6; 
        color: var(--color-secondary);
        max-width: 500px; 
        margin-bottom: var(--spacing-8);
    }

    .hero-subscribe-wrapper { 
        width: 100%; 
        max-width: 450px; 
    }

    /* --- 3. Media Column (No Tilt) --- */
    .hero-modern-media {
        display: flex; 
        justify-content: center; 
        align-items: center;
    }

    /* Double Frame Container */
    .double-frame {
        position: relative;
        width: 100%; 
        aspect-ratio: 1/1;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-5);
        background: var(--color-background);
        padding: 12px;
        box-shadow: 
            0 20px 50px rgba(0,0,0,0.15),
            0 0 0 10px rgba(128,128,128,0.05);
        transition: transform 0.18s ease-out, box-shadow 0.18s ease-out;
    }

    .double-frame:hover {
        transform: translateY(-4px);
        box-shadow: 
            0 26px 60px rgba(0,0,0,0.2),
            0 0 0 12px rgba(128,128,128,0.06);
    }

    .hero-image-fig {
        width: 100%; 
        height: 100%;
        margin: 0;
        border-radius: var(--radius-4);
        overflow: hidden;
        position: relative;
    }

    .hero-image-fig img {
        width: 100%; 
        height: 100%; 
        object-fit: cover;
        transition: transform 0.5s;
    }

    /* Zoom image slightly on hover */
    .double-frame:hover .hero-image-fig img { 
        transform: scale(1.05); 
    }

    /* --- Responsive --- */
    @media (max-width: 991px) {
        .hero-modern {
            padding: var(--spacing-8) var(--spacing-4);
        }

        .hero-modern-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-8);
        }

        /* Media First on Mobile */
        .hero-modern-media { 
            order: -1; 
            max-width: 420px; 
            margin: 0 auto; 
        }
        
        /* Left-aligned Content (no center text on mobile) */
        .hero-modern-content { 
            align-items: flex-start; 
        }

        .hero-meta-stack { 
            border-left: none; 
            padding-left: 0; 
            align-items: flex-start; 
        }
    }

    @media (max-width: 600px) {
        .hero-modern {
            padding: var(--spacing-7) var(--spacing-3);
        }

        .hero-modern-media { 
            max-width: 360px; 
        }

        .hero-bio {
            font-size: 1.02rem;
        }
    }
</style>

{{/if}}


