<style>
    /* --- 1. Container & Background --- */
    .hero-modern {
        position: relative;
        padding: var(--spacing-10) var(--spacing-6);
        background-color: var(--color-background);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Grid Lines with Corner Fade */
    .hero-modern-bg {
        position: absolute; inset: 0; pointer-events: none; z-index: 0;
        background-image: 
            linear-gradient(to right, rgba(128,128,128,0.06) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(128,128,128,0.06) 1px, transparent 1px);
        background-size: 32px 32px;
        mask-image: radial-gradient(circle at center, black 45%, transparent 100%);
        -webkit-mask-image: radial-gradient(circle at center, black 45%, transparent 100%);
    }

    /* Layout Grid */
    .hero-modern-grid {
        display: grid;
        grid-template-columns: minmax(0, 1.1fr) minmax(0, 420px); /* Text | Image */
        gap: var(--spacing-10);
        align-items: center;
        position: relative; 
        z-index: 1;
        max-width: 1120px;
        width: 100%;
        margin: 0 auto;
    }

    /* --- 2. Content Column --- */
    .hero-modern-content {
        display: flex; 
        flex-direction: column; 
        align-items: flex-start;
    }

    .hero-greeting {
        font-size: var(--font-small);
        font-weight: 700; 
        color: var(--ghost-accent-color);
        text-transform: uppercase; 
        letter-spacing: 1px;
        margin-bottom: var(--spacing-3);
    }

    .wave { 
        display: inline-block; 
        animation: wave 2.5s infinite; 
        transform-origin: 70% 70%; 
    }

    @keyframes wave { 
        0%,100%{transform:rotate(0deg);} 
        10%,30%{transform:rotate(14deg);} 
        20%{transform:rotate(-8deg);} 
        40%{transform:rotate(-4deg);} 
        50%{transform:rotate(10deg);} 
    }

    .hero-title {
        font-size: clamp(3rem, 6vw, 4.5rem);
        font-weight: 800; 
        line-height: 1;
        color: var(--color-contrast);
        margin-bottom: var(--spacing-6);
    }

    /* Meta Stack (New Lines) */
    .hero-meta-stack {
        display: flex; 
        flex-direction: column; 
        gap: 12px;
        margin-bottom: var(--spacing-8);
        border-left: 2px solid var(--color-border);
        padding-left: var(--spacing-5);
    }

    .meta-row {
        display: flex; 
        align-items: center; 
        gap: 12px;
        font-size: 1rem; 
        color: var(--color-foreground);
    }

    .meta-icon {
        color: var(--ghost-accent-color);
        display: flex; 
        align-items: center;
    }

    .meta-text strong { 
        color: var(--color-contrast); 
        font-weight: 700; 
    }

    .hero-bio {
        font-size: 1.15rem; 
        line-height: 1.6; 
        color: var(--color-secondary);
        max-width: 500px; 
        margin-bottom: var(--spacing-8);
    }

    .hero-subscribe-wrapper { 
        width: 100%; 
        max-width: 450px; 
    }

    /* --- 3. Media Column (No Tilt) --- */
    .hero-modern-media {
        display: flex; 
        justify-content: center; 
        align-items: center;
    }

    /* Double Frame Container */
    .double-frame {
        position: relative;
        width: 100%; 
        aspect-ratio: 1/1;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-5);
        background: var(--color-background);
        padding: 12px;
        box-shadow: 
            0 20px 50px rgba(0,0,0,0.15),
            0 0 0 10px rgba(128,128,128,0.05);
        transition: transform 0.18s ease-out, box-shadow 0.18s ease-out;
    }

    .double-frame:hover {
        transform: translateY(-4px);
        box-shadow: 
            0 26px 60px rgba(0,0,0,0.2),
            0 0 0 12px rgba(128,128,128,0.06);
    }

    .hero-image-fig {
        width: 100%; 
        height: 100%;
        margin: 0;
        border-radius: var(--radius-4);
        overflow: hidden;
        position: relative;
    }

    .hero-image-fig img {
        width: 100%; 
        height: 100%; 
        object-fit: cover;
        transition: transform 0.5s;
    }

    /* Zoom image slightly on hover */
    .double-frame:hover .hero-image-fig img { 
        transform: scale(1.05); 
    }

    /* --- Responsive --- */
    @media (max-width: 991px) {
        .hero-modern {
            padding: var(--spacing-8) var(--spacing-4);
        }

        .hero-modern-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-8);
        }

        /* Media First on Mobile */
        .hero-modern-media { 
            order: -1; 
            max-width: 420px; 
            margin: 0 auto; 
        }
        
        /* Left-aligned Content (no center text on mobile) */
        .hero-modern-content { 
            align-items: flex-start; 
        }

        .hero-meta-stack { 
            border-left: none; 
            padding-left: 0; 
            align-items: flex-start; 
        }
    }

    @media (max-width: 600px) {
        .hero-modern {
            padding: var(--spacing-7) var(--spacing-3);
        }

        .hero-modern-media { 
            max-width: 360px; 
        }

        .hero-bio {
            font-size: 1.02rem;
        }
    }
</style>

