{{!-- partials/adsense.hbs --}}
{{!-- Usage (only type):
    {{> "adsense" type="auto" }}
    {{> "adsense" type="leaderboard" }}
    {{> "adsense" type="banner" }}
    {{> "adsense" type="square" }}
    {{> "adsense" type="rectangle" }}
    {{> "adsense" type="vertical" }}
    {{> "adsense" type="fluid" }}
    {{> "adsense" type="in-article" }}
--}}

{{#unless @member}}
<div class="gh-ad {{#if type}}gh-ad--{{type}}{{/if}}">
  <div class="gh-ad__bg" aria-hidden="true"></div>

  <div class="gh-ad__body">
    <div class="gh-ad__container">

      {{!-- AUTO – uses autorelaxed slot --}}
      {{#match type "auto"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="6808134701"
             data-ad-format="autorelaxed"></ins>

      {{!-- LEADERBOARD – horizontal slot --}}
      {{else match type "leaderboard"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="8939839370"></ins>

      {{!-- BANNER – also horizontal slot --}}
      {{else match type "banner"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="8939839370"></ins>

      {{!-- SQUARE – square slot --}}
      {{else match type "square"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="7663977887"></ins>

      {{!-- RECTANGLE – fluid slot --}}
      {{else match type "rectangle"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="9130894804"
             data-ad-format="fluid"></ins>

      {{!-- VERTICAL (e.g. 300x600) – vertical slot --}}
      {{else match type "vertical"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="3487917390"></ins>

      {{!-- FLUID responsive – fluid slot --}}
      {{else match type "fluid"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="9130894804"
             data-ad-format="fluid"></ins>

      {{!-- IN-ARTICLE – in_article slot --}}
      {{else match type "in-article"}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-layout="in-article"
             data-ad-format="fluid"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="6501428979"></ins>

      {{!-- FALLBACK – use square slot --}}
      {{else}}
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1291242080282540"
             data-ad-slot="7663977887"></ins>
      {{/match}}

    </div>
  </div>
</div>

<script>
  (window.adsbygoogle = window.adsbygoogle || []).push({});
</script>
{{/unless}}
