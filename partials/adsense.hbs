{{!-- partials/adsense.hbs --}}
{{!-- Show ads only for non-members --}}
{{#unless @member}}

{{!--
  Usage Examples:
  {{> "adsense" type="auto" }}
  {{> "adsense" type="square" }}
  {{> "adsense" type="rectangle" }}
  {{> "adsense" type="leaderboard" }}
  {{> "adsense" type="banner" }}
  {{> "adsense" type="in-article" }}
--}}

<div class="gh-ad {{#if type}}gh-ad--{{type}}{{/if}} {{#if class}}{{class}}{{/if}}">
  <div class="gh-ad-label">{{t "Advertisement"}}</div>
  <div class="gh-ad-container">
    {{!-- Auto responsive ad --}}
    {{#match type "auto"}}
      <ins class="adsbygoogle"
           data-ad-client="ca-pub-1291242080282540"
           data-ad-slot="{{#if slot}}{{slot}}{{else}}7663977887{{/if}}"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>

    {{!-- Square (250x250) --}}
    {{else match type "square"}}
      <ins class="adsbygoogle"
           data-ad-client="ca-pub-1291242080282540"
           data-ad-slot="{{#if slot}}{{slot}}{{else}}7663977887{{/if}}"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>

    {{!-- Rectangle (336x280) --}}
    {{else match type "rectangle"}}
      <ins class="adsbygoogle"
           data-ad-client="ca-pub-1291242080282540"
           data-ad-slot="{{#if slot}}{{slot}}{{else}}7663977887{{/if}}"></ins>

    {{!-- Leaderboard (728x90) --}}
    {{else match type "leaderboard"}}
      <ins class="adsbygoogle"
           data-ad-client="ca-pub-1291242080282540"
           data-ad-slot="{{#if slot}}{{slot}}{{else}}8939839370{{/if}}"></ins>

    {{!-- Banner (468x60) --}}
    {{else match type "banner"}}
      <ins class="adsbygoogle"
           data-ad-client="ca-pub-1291242080282540"
           data-ad-slot="{{#if slot}}{{slot}}{{else}}8939839370{{/if}}"></ins>

    {{!-- In-article --}}
    {{else match type "in-article"}}
      <ins class="adsbygoogle"
           data-ad-layout="in-article"
           data-ad-format="fluid"
           data-ad-client="ca-pub-1291242080282540"
           data-ad-slot="{{#if slot}}{{slot}}{{else}}6501428979{{/if}}"></ins>

    {{!-- Custom size --}}
    {{else}}
      <ins class="adsbygoogle"
           data-ad-client="ca-pub-1291242080282540"
           data-ad-slot="{{#if slot}}{{slot}}{{else}}7663977887{{/if}}"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
    {{/match}}
  </div>
</div>

<script>(window.adsbygoogle = window.adsbygoogle || []).push({});</script>

{{/unless}}