<style>
  /* Home Hero Section Styles */
  .home-hero-custom-wrapper {
    position: relative;
    margin: var(--layout--gap, 60px) 0;
    padding: var(--layout--gap, 60px);
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-6);
    overflow: hidden;
    color: var(--color-white); /* Set default text color to white for visibility */
  }

  .home-hero-custom-video-bg {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100vw; /* Cover full viewport width */
    height: 56.25vw; /* 16:9 aspect ratio */
    min-height: 100%; /* Ensure it covers the full height */
    min-width: 177.77vh; /* Fallback for aspect ratio */
    transform: translate(-50%, -50%);
    z-index: 1;
    pointer-events: none; /* Make video unclickable */
  }

  /* Dark Overlay for Text Readability */
  .home-hero-custom-wrapper::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background-color: var(--color-overlay, rgba(5, 5, 5, 0.7));
    z-index: 2;
  }

  .home-hero-custom {
    position: relative;
    z-index: 3;
    display: grid;
    grid-template-columns: 1fr 42%;
    align-items: stretch;
    gap: var(--layout--gap);
  }

  /* Content Column */
  .home-hero-custom-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .home-hero-custom-ticker {
    font-size: var(--font-small);
    font-weight: var(--font-weight-medium);
    color: var(--color-white);
    opacity: 0.7;
    margin-bottom: var(--spacing-4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .home-hero-custom-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-family: var(--font-family-headings);
    font-weight: var(--font-weight-bold);
    color: var(--color-white);
    margin: 0 0 var(--spacing-8);
    line-height: 1.1;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
  }

  .home-hero-custom-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-6);
    margin-bottom: var(--spacing-8);
  }

  .home-hero-custom-meta .meta-item {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-4);
    font-size: var(--font-small);
    color: var(--color-white);
    opacity: 0.9;
  }

  .home-hero-custom-meta .meta-icon {
    width: 18px; height: 18px;
    color: var(--color-white);
    opacity: 0.6;
    flex-shrink: 0;
  }

  .home-hero-custom-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-9);
  }

  .home-hero-custom-tags .tag {
    padding: var(--spacing-2) var(--spacing-5);
    font-size: var(--font-x-small);
    font-weight: var(--font-weight-medium);
    color: var(--color-white);
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-2);
  }

  .home-hero-custom-stats {
    display: flex;
    gap: var(--spacing-8);
    padding: var(--spacing-8) 0;
    margin-bottom: var(--spacing-9);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .home-hero-custom-stats .stat-item {
    display: flex;
    flex-direction: column;
  }

  .home-hero-custom-stats .stat-number {
    font-size: 1.75rem;
    font-weight: var(--font-weight-semibold);
    color: var(--color-white);
    line-height: 1;
  }

  .home-hero-custom-stats .stat-label {
    font-size: var(--font-x-small);
    color: var(--color-white);
    opacity: 0.7;
    margin-top: var(--spacing-3);
  }

  .home-hero-custom-form {
    margin-top: auto;
  }

  .home-hero-custom-form > label {
    font-size: var(--font-small);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--spacing-5);
    color: var(--color-white);
  }
  
  .home-hero-custom-form input {
      background-color: rgba(255, 255, 255, 0.1) !important;
      border: 1px solid rgba(255, 255, 255, 0.2) !important;
      color: var(--color-white) !important;
  }

  .home-hero-custom-form input::placeholder {
      color: rgba(255, 255, 255, 0.5) !important;
  }

  /* Image Column */
  .home-hero-custom-image-wrapper {
    position: relative;
    border-radius: var(--radius-4);
    overflow: hidden;
    min-height: 450px;
  }

  .home-hero-custom-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .home-hero-custom-badges {
    position: absolute;
    bottom: var(--spacing-6);
    left: var(--spacing-6);
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-4);
  }

  .home-hero-custom-badges .badge {
    padding: var(--spacing-3) var(--spacing-5);
    font-size: var(--font-small);
    font-weight: var(--font-weight-medium);
    color: var(--color-white);
    background-color: var(--color-overlay);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-2);
  }

  /* Responsive Adjustments */
  @media (max-width: 991px) {
    .home-hero-custom-wrapper {
      padding: var(--spacing-9);
    }
    .home-hero-custom {
      grid-template-columns: 1fr 0.7fr;
    }
  }

  @media (max-width: 767px) {
    .home-hero-custom-wrapper {
      padding: var(--layout--padding);
    }
    .home-hero-custom {
      grid-template-columns: 1fr; /* Stack columns */
      gap: var(--spacing-9);
    }
    .home-hero-custom-image-wrapper {
      order: 1;
      height: 400px;
    }
    .home-hero-custom-content {
      order: 2;
      text-align: center;
    }
    .home-hero-custom-meta, 
    .home-hero-custom-tags, 
    .home-hero-custom-stats {
      align-items: center;
      justify-content: center;
    }
  }
</style>

