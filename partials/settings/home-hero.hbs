<script>
(function () {
  const root = document.querySelector('[data-hero-toggle]');
  if (!root) return;
  const buttons = root.querySelectorAll('.hero__toggle-btn');
  const panels = document.querySelectorAll('.hero__panel');

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const target = btn.getAttribute('data-target');

      buttons.forEach(b => b.classList.remove('is-active'));
      btn.classList.add('is-active');

      panels.forEach(p => {
        if (p.getAttribute('data-media') === target) {
          p.classList.add('is-active');
          const iframe = p.querySelector('iframe');
          if (iframe && target === 'video') {
            const src = iframe.getAttribute('src');
            if (!src.includes('autoplay=1')) {
              iframe.setAttribute('src', src + '&autoplay=1');
            }
          }
        } else {
          p.classList.remove('is-active');
        }
      });
    });
  });
})();
</script>
