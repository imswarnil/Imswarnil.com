{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#page}}
	{{!-- Hero. --}}
	{{#if @page.show_title_and_feature_image}}
		<section class="section section-hero">
			<div class="section-hero-content section-hero-content-membership">
				<h1>{{title}}</h1>
				{{#if custom_excerpt}}
					<p>{{custom_excerpt}}</p>
				{{/if}}
			</div>
		</section>
	{{/if}}

	<div class="pricing-wrapper">
		{{> pricing}}

		{{#if feature_image}}
			{{> "components/image" class="pricing-image" src=feature_image alt=(t "Background pricing")}}
		{{/if}}
	</div>

	{{!-- Content. --}}
	{{#if html}}
		<div class="post-content">{{content}}</div>
	{{/if}}
{{/page}}
