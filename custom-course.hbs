{{!< default}}
{{!-- Custom course template for /course/ collection (tags:hash-course) --}}

{{#post}}

{{#contentFor "body-class"}} post-template-course post-template-default{{/contentFor}}

<article id="content" class="content post-course {{post_class}}">

    <style>
        /* WRAPPER */
        .course-wrapper {
            width: 100%;
            max-width: var(--container-wide--width);
            margin: 0 auto var(--spacing-10);
            font-family: var(--font-family-body);
            color: var(--color-foreground);
            padding-inline: var(--layout--padding);
        }

        /* MAIN GRID ‚Äì DESKTOP */
        .course-layout {
            display: grid;
            grid-template-columns: minmax(0, 1.7fr) minmax(0, 360px); /* content | sidebar */
            gap: var(--layout--gap);
            margin-top: var(--spacing-9);
            align-items: flex-start;
        }

        .course-main {
            min-width: 0;
        }

        .course-aside {
            position: relative;
        }

        .course-aside-sticky {
            position: sticky;
            top: 96px;
        }

        .course-section {
            margin-bottom: var(--spacing-10);
        }

        .course-heading {
            font-family: var(--font-family-headings);
            font-size: 1.75rem;
            font-weight: var(--font-weight-bold);
            color: var(--color-contrast);
            margin: 0 0 var(--spacing-6);
        }

        /* HERO */
        .course-hero {
            background-color: var(--color-background-100);
            border-radius: var(--radius-5);
            padding: clamp(var(--spacing-6), 4vw, var(--spacing-9));
            border: 1px solid var(--color-border);
            margin-top: var(--spacing-8);
            position: relative;
            overflow: hidden;
        }

        .course-hero::before {
            content: "";
            position: absolute;
            inset: 0;
            pointer-events: none;
            opacity: 0.35;
            background-image:
                linear-gradient(to right,
                    color-mix(in srgb, var(--color-border), transparent 65%) 1px,
                    transparent 1px),
                linear-gradient(to bottom,
                    color-mix(in srgb, var(--color-border), transparent 65%) 1px,
                    transparent 1px);
            background-size: 34px 34px;
            mask-image: radial-gradient(circle at top left, black, transparent 70%);
        }

        .hero-inner {
            display: grid;
            grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
            gap: var(--spacing-8);
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .hero-copy {
            min-width: 0;
        }

        .course-hero-lock-overlay {
            position: absolute;
            top: var(--spacing-6);
            right: var(--spacing-6);
            z-index: 2;
        }

        .hero-lock-pill {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 9px;
            border-radius: 999px;
            border: 1px dashed var(--color-border);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.06em;
            color: var(--color-error);
            background: rgba(195, 77, 77, .06);
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 20px;
            background: var(--color-background);
            border: 1px solid var(--color-border);
            font-size: var(--font-x-small);
            font-weight: var(--font-weight-bold);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: var(--ghost-accent-color);
            margin-bottom: var(--spacing-4);
            white-space: nowrap;
        }

        .hero-badge-dot {
            width: 8px;
            height: 8px;
            border-radius: 999px;
            background: var(--ghost-accent-color);
        }

        .hero-title {
            font-family: var(--font-family-headings);
            font-size: clamp(2rem, 4vw, 3.2rem);
            font-weight: var(--font-weight-bold);
            line-height: 1.1;
            color: var(--color-contrast);
            margin: 0 0 var(--spacing-4);
        }

        .hero-meta-inline {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: var(--spacing-3);
            font-size: 0.85rem;
            color: var(--color-secondary);
        }

        .hero-meta-pill {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 10px;
            border-radius: 999px;
            border: 1px solid var(--color-border);
            background: var(--color-background-100);
        }

        .hero-meta-label {
            opacity: 0.7;
        }

        .hero-meta-value {
            font-weight: var(--font-weight-medium);
        }

        .hero-excerpt {
            font-size: 1.02rem;
            line-height: 1.55;
            color: var(--color-secondary);
            margin: 0 0 var(--spacing-5);
            max-width: 40rem;
        }

        .course-locked-banner {
            margin: 0 0 var(--spacing-4);
            padding: 0.85rem 1rem;
            border-radius: var(--radius-4);
            border: 1px dashed var(--color-border);
            background: rgba(195, 77, 77, .05);
            display: flex;
            gap: 0.75rem;
            align-items: flex-start;
            font-size: 0.9rem;
        }

        .course-locked-icon {
            font-size: 1.2rem;
        }

        .course-locked-text strong {
            color: var(--color-error);
        }

        .course-locked-text p {
            margin: 0.25rem 0 0;
            color: var(--color-secondary);
        }

        .hero-actions {
            display: flex;
            flex-wrap: wrap;
            gap: var(--spacing-4);
            margin-top: var(--spacing-4);
        }

        .button.outline {
            background: transparent;
            border: 1px solid var(--color-border);
            color: var(--color-contrast);
        }

        .button.outline:hover {
            background: var(--color-background-200);
        }

        .hero-media {
            position: relative;
            aspect-ratio: 16/9;
            border-radius: var(--radius-4);
            overflow: hidden;
            box-shadow: var(--shadow);
            background-color: #000;
            width: 100%;
        }

        .hero-media img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .hero-media-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--color-secondary);
            font-size: 0.9rem;
            background: radial-gradient(circle at top left, var(--color-background-200), #000);
        }

        .hero-media .play-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 64px;
            height: 64px;
            background: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #000;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
            transition: transform 0.2s;
        }

        .hero-media:hover .play-icon {
            transform: translate(-50%, -50%) scale(1.08);
        }

        /* WHAT YOU WILL LEARN */
        .learning-card {
            border: 1px solid var(--color-border);
            border-radius: var(--radius-4);
            padding: var(--spacing-8);
            background: var(--color-background);
            margin-bottom: var(--spacing-9);
        }

        .learning-grid {
            display: grid;
            grid-template-columns: repeat(2, minmax(0,1fr));
            gap: var(--spacing-5);
        }

        .learning-item {
            display: flex;
            gap: 12px;
            align-items: flex-start;
            font-size: var(--font-small);
            line-height: 1.5;
        }

        .learning-item svg {
            color: var(--color-success);
            flex-shrink: 0;
            width: 20px;
            height: 20px;
            margin-top: 2px;
        }

        /* HIGHLIGHTS */
        .course-feature-section {
            margin-bottom: var(--spacing-10);
        }

        .course-feature-grid {
            display: grid;
            grid-template-columns: repeat(3, minmax(0, 1fr));
            gap: var(--spacing-5);
        }

        .course-feature-card {
            display: flex;
            gap: 0.75rem;
            align-items: flex-start;
            padding: 0.9rem 1rem;
            border-radius: var(--radius-4);
            background: var(--color-background-100);
            border: 1px solid var(--color-border);
        }

        .course-feature-icon {
            width: 32px;
            height: 32px;
            border-radius: 999px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            line-height: 1;
            background: #ffe5e5;
            color: #e53935;
            flex-shrink: 0;
        }

        .course-feature-title {
            font-size: 0.95rem;
            font-weight: var(--font-weight-medium);
            color: var(--color-contrast);
            margin: 0 0 0.15rem;
        }

        .course-feature-text {
            margin: 0;
            font-size: 0.86rem;
            color: var(--color-foreground);
        }

        /* CURRICULUM */
        .curriculum-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            gap: var(--spacing-4);
            margin-bottom: var(--spacing-5);
            border-bottom: 1px solid var(--color-border);
            padding-bottom: var(--spacing-3);
        }

        .curriculum-header-right {
            font-size: 0.85rem;
            color: var(--color-secondary);
            text-align: right;
        }

        .curriculum-header-right span {
            display: block;
        }

        .lesson-list {
            margin-top: var(--spacing-3);
        }

        .lesson-row {
            display: flex;
            align-items: flex-start;
            padding: var(--spacing-4);
            background-color: var(--color-background);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-3);
            margin-bottom: 12px;
            text-decoration: none;
            transition: border-color 0.2s, transform 0.2s, background-color 0.2s;
        }

        .lesson-row.unlocked:hover {
            border-color: var(--color-contrast);
            background-color: var(--color-background-100);
            transform: translateY(-1px);
        }

        .lesson-row.locked {
            cursor: default;
        }

        .lesson-thumb {
            width: 80px;
            height: 50px;
            border-radius: var(--radius-1);
            object-fit: cover;
            margin-right: 16px;
            background: var(--color-background-200);
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--color-secondary);
            font-size: 0.75rem;
        }

        .lesson-info {
            flex: 1;
            min-width: 0;
        }

        .lesson-title-line {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 4px;
            flex-wrap: wrap;
        }

        .lesson-title {
            display: block;
            font-family: var(--font-family-headings);
            font-weight: var(--font-weight-medium);
            color: var(--color-contrast);
            font-size: 1rem;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .lesson-chip {
            padding: 2px 8px;
            border-radius: 999px;
            border: 1px solid var(--color-border);
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.06em;
            color: var(--color-secondary);
        }

        .lesson-chip.free {
            border-color: var(--color-success);
            color: var(--color-success);
        }

        .lesson-meta {
            font-size: var(--font-x-small);
            color: var(--color-secondary);
        }

        .lesson-excerpt-sm {
            margin-top: 4px;
            font-size: 0.8rem;
            color: var(--color-foreground);
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .lesson-status-block {
            display: flex;
            flex-direction: column;
            gap: 4px;
            margin-left: 15px;
            flex-shrink: 0;
            align-items: flex-end;
        }

        .lesson-status {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.7rem;
            font-weight: var(--font-weight-bold);
            text-transform: uppercase;
            background: var(--color-background-200);
            color: var(--color-secondary);
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .lesson-status.free {
            background: var(--ghost-accent-color);
            color: #fff;
        }

        .lesson-status.locked {
            background: rgba(195, 77, 77, .08);
            color: var(--color-error);
            border: 1px solid rgba(195, 77, 77, .4);
        }

        .lesson-status-icon {
            font-size: 0.9rem;
        }

        .lesson-status-cta {
            font-size: 0.75rem;
            color: var(--ghost-accent-color);
            text-decoration: none;
            font-weight: var(--font-weight-medium);
        }

        .lesson-status-cta:hover {
            text-decoration: underline;
        }

        .curriculum-empty {
            font-size: 0.9rem;
            color: var(--color-secondary);
        }

        /* OVERVIEW + META */
        .course-overview {
            line-height: 1.7;
            font-size: 1.05rem;
        }

        .course-overview .post-content {
            margin: 0;
        }

        .course-overview .post-content > *:first-child {
            margin-top: 0;
        }

        .course-overview .post-content > *:last-child {
            margin-bottom: 0;
        }

        .course-meta-grid {
            display: grid;
            grid-template-columns: repeat(3, minmax(0,1fr));
            gap: var(--spacing-4);
            margin-bottom: var(--spacing-6);
        }

        .course-meta-card {
            border-radius: var(--radius-3);
            border: 1px dashed var(--color-border);
            padding: var(--spacing-4);
            font-size: 0.9rem;
        }

        .course-meta-card-title {
            font-weight: var(--font-weight-medium);
            color: var(--color-contrast);
            margin-bottom: 0.3rem;
        }

        .course-meta-card-body {
            color: var(--color-secondary);
        }

        /* SIDEBAR */
        .sidebar-card {
            background-color: var(--color-background-100);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-4);
            padding: var(--spacing-7);
            margin-bottom: var(--spacing-7);
            box-shadow: 0 10px 40px -10px rgba(0,0,0,0.05);
        }

        .sidebar-subtext {
            text-align: center;
            font-size: 0.8rem;
            color: var(--color-secondary);
            margin-bottom: 20px;
        }

        .details-list {
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .details-list li {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid var(--color-border);
            font-size: var(--font-small);
            color: var(--color-foreground);
            gap: var(--spacing-4);
        }

        .details-list li:last-child {
            border-bottom: none;
        }

        .details-label {
            opacity: 0.8;
        }

        /* AD PLACEHOLDERS */
        .sidebar-ad {
            background: var(--color-background);
            border-radius: var(--radius-3);
            border: 1px dashed var(--color-border);
            padding: var(--spacing-4);
            margin-bottom: var(--spacing-4);
        }

        .sidebar-ad-slot {
            width: 100%;
            aspect-ratio: 4/3;
            border-radius: var(--radius-2);
            background: var(--color-background-200);
        }

        .sidebar-ad-label {
            font-size: 0.7rem;
            color: var(--color-secondary);
            margin-top: 8px;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 0.08em;
        }

        /* TESTIMONIALS */
        .course-testimonials {
            margin-top: var(--spacing-10);
        }

        .course-testimonials-heading {
            font-size: 1.4rem;
            font-weight: var(--font-weight-bold);
            color: var(--color-contrast);
            text-align: center;
            margin-bottom: var(--spacing-6);
        }

        .course-testimonial-grid {
            display: grid;
            grid-template-columns: repeat(3, minmax(0,1fr));
            gap: var(--spacing-6);
        }

        .course-testimonial-card {
            padding: var(--spacing-6);
            border-radius: var(--radius-4);
            border: 1px solid var(--color-border);
            background: var(--color-background-100);
            box-shadow: 0 10px 40px -16px rgba(0,0,0,0.08);
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .course-testimonial-rating {
            font-size: 1rem;
            color: #facc15;
        }

        .course-testimonial-quote {
            font-size: 0.95rem;
            color: var(--color-foreground);
            margin: 0;
        }

        .course-testimonial-user {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-top: 0.5rem;
        }

        .course-testimonial-avatar img {
            width: 44px;
            height: 44px;
            border-radius: 999px;
            border: 2px solid var(--color-border);
            object-fit: cover;
            display: block;
        }

        .course-testimonial-meta {
            font-size: 0.8rem;
            color: var(--color-secondary);
        }

        .course-testimonial-meta strong {
            display: block;
            color: var(--color-contrast);
        }

        /* TABLET */
        @media (max-width: 1024px) {
            .course-wrapper {
                max-width: 100%;
                padding-inline: var(--spacing-5);
            }

            .hero-inner {
                grid-template-columns: minmax(0,1fr);
                gap: var(--spacing-6);
            }

            .hero-media {
                order: -1;
                max-width: 640px;
                margin: 0 auto;
            }

            .course-layout {
                grid-template-columns: minmax(0,1fr);
                gap: var(--spacing-8);
            }

            .course-aside {
                order: 2;
                margin-top: var(--spacing-4);
            }

            .course-aside-sticky {
                position: static;
                top: auto;
            }

            .learning-grid {
                grid-template-columns: minmax(0,1fr);
            }

            .course-feature-grid {
                grid-template-columns: repeat(2, minmax(0,1fr));
            }

            .course-meta-grid {
                grid-template-columns: repeat(2, minmax(0,1fr));
            }

            .course-testimonial-grid {
                grid-template-columns: repeat(2, minmax(0,1fr));
            }
        }

        /* MOBILE */
        @media (max-width: 640px) {
            .course-wrapper {
                padding-inline: var(--spacing-4);
            }

            .course-hero {
                margin-top: var(--spacing-6);
                padding: var(--spacing-6);
            }

            .course-hero-lock-overlay {
                top: var(--spacing-4);
                right: var(--spacing-4);
            }

            .hero-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .course-feature-grid,
            .course-meta-grid,
            .course-testimonial-grid {
                grid-template-columns: minmax(0,1fr);
            }

            .lesson-row {
                flex-direction: column;
                align-items: stretch;
            }

            .lesson-thumb {
                width: 100%;
                height: 170px;
                margin: 0 0 10px 0;
            }

            .lesson-title {
                white-space: normal;
            }

            .lesson-status-block {
                margin-left: 0;
                margin-top: 8px;
                align-items: flex-start;
            }

            .curriculum-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .curriculum-header-right {
                text-align: left;
            }

            .sidebar-card {
                padding: var(--spacing-6);
            }

            .course-layout {
                gap: var(--spacing-6);
            }

            .course-aside {
                margin-top: var(--spacing-2);
            }
        }
    </style>

    <div class="course-wrapper">

        <!-- HERO -->
        <header class="post-header">
            <div class="course-hero">

                {{#unless access}}
                    <div class="course-hero-lock-overlay">
                        <span class="hero-lock-pill">
                            <span>üîí</span> {{t "Members only"}}
                        </span>
                    </div>
                {{/unless}}

                <div class="hero-inner">
                    <div class="hero-copy">

                        {{#has tag="#course"}}
                            <span class="hero-badge">
                                <span class="hero-badge-dot"></span>
                                {{#has tag="#free"}}
                                    {{t "Free course"}}
                                {{else}}
                                    {{t "Premium course"}}
                                {{/has}}
                            </span>
                        {{/has}}

                        <h1 class="hero-title">{{title}}</h1>

                        <div class="hero-meta-inline">
                            {{#if primary_tag}}
                                <span class="hero-meta-pill">
                                    <span class="hero-meta-label">{{t "Track"}}</span>
                                    <span class="hero-meta-value">{{primary_tag.name}}</span>
                                </span>
                            {{/if}}

                            {{#has tag="#level-beginner"}}
                                <span class="hero-meta-pill">
                                    <span class="hero-meta-label">{{t "Level"}}</span>
                                    <span class="hero-meta-value">{{t "Beginner"}}</span>
                                </span>
                            {{/has}}

                            {{#has tag="#level-intermediate"}}
                                <span class="hero-meta-pill">
                                    <span class="hero-meta-label">{{t "Level"}}</span>
                                    <span class="hero-meta-value">{{t "Intermediate"}}</span>
                                </span>
                            {{/has}}

                            {{#has tag="#level-advanced"}}
                                <span class="hero-meta-pill">
                                    <span class="hero-meta-label">{{t "Level"}}</span>
                                    <span class="hero-meta-value">{{t "Advanced"}}</span>
                                </span>
                            {{/has}}

                            {{#has tag="#free"}}
                                <span class="hero-meta-pill">
                                    <span class="hero-meta-label">{{t "Price"}}</span>
                                    <span class="hero-meta-value">{{t "Free"}}</span>
                                </span>
                            {{/has}}
                            {{#has tag="#paid"}}
                                <span class="hero-meta-pill">
                                    <span class="hero-meta-label">{{t "Price"}}</span>
                                    <span class="hero-meta-value">{{t "Members only"}}</span>
                                </span>
                            {{/has}}
                        </div>

                        {{#if custom_excerpt}}
                            <p class="hero-excerpt">
                                {{custom_excerpt}}
                            </p>
                        {{else if excerpt}}
                            <p class="hero-excerpt">
                                {{excerpt}}
                            </p>
                        {{/if}}

                        {{#unless access}}
                            <div class="course-locked-banner">
                                <div class="course-locked-icon">üîí</div>
                                <div class="course-locked-text">
                                    <strong>{{t "This course is for members only."}}</strong>
                                    {{#if comment}}
                                        <p>{{comment}}</p>
                                    {{/if}}
                                </div>
                            </div>
                        {{/unless}}

                        <div class="hero-actions">
                            {{#if primary_tag}}
                                {{#get
                                    "posts"
                                    filter=(concat "tag:hash-lesson+tag:" primary_tag.slug)
                                    limit="1"
                                    order="published_at asc"
                                }}
                                    {{#if posts}}
                                        {{#foreach posts}}
                                            {{#if access}}
                                                <a href="{{url}}" class="button button-rounded">
                                                    {{t "Start from Lesson 1"}}
