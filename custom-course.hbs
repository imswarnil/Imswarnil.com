<style>
    /* =========================================
       1. LAYOUT & GRID SYSTEM
       ========================================= */
    .course-wrapper {
        width: 100%;
        max-width: var(--container-wide--width);
        margin: 0 auto var(--spacing-10);
        font-family: var(--font-family-body);
        color: var(--color-foreground);
        padding-inline: var(--layout--padding);
    }

    /* The Main Grid Layout */
    .course-layout {
        display: grid;
        grid-template-columns: minmax(0, 2.2fr) minmax(0, 1fr); /* Wider Content */
        gap: var(--spacing-9);
        align-items: flex-start;
        margin-top: var(--spacing-9);
    }

    /* "Griddy" Pattern Utility */
    .technical-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1px;
        background-color: var(--color-border);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-4);
        overflow: hidden;
        margin-bottom: var(--spacing-9);
    }

    .technical-grid-item {
        background-color: var(--color-background);
        padding: var(--spacing-6);
        transition: background-color 0.2s ease;
    }
    
    .technical-grid-item:hover {
        background-color: var(--color-background-100);
    }

    /* =========================================
       2. HERO SECTION (With Grid Bg)
       ========================================= */
    .course-hero {
        position: relative;
        padding: var(--spacing-9) 0;
        border-bottom: 1px solid var(--color-border);
        overflow: hidden;
    }

    /* The Grid Background Effect */
    .course-hero-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 0;
        background-image: 
            linear-gradient(to right, color-mix(in srgb, var(--color-border), transparent 60%) 1px, transparent 1px),
            linear-gradient(to bottom, color-mix(in srgb, var(--color-border), transparent 60%) 1px, transparent 1px);
        background-size: 40px 40px;
        mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
        -webkit-mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
        opacity: 0.6;
    }

    .hero-content-wrapper {
        display: grid;
        grid-template-columns: minmax(0, 1.5fr) minmax(0, 1fr);
        gap: var(--spacing-8);
        align-items: flex-start;
        position: relative;
        z-index: 1;
    }

    .hero-content {
        max-width: 640px;
    }

    .hero-media {
        position: relative;
        aspect-ratio: 16/9;
        border-radius: var(--radius-4);
        overflow: hidden;
        box-shadow: var(--shadow);
        background-color: #000;
        width: 100%;
        margin-top: 40px; /* small, not too dramatic */
    }

    .hero-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    /* Hero badges & text */
    .hero-badge-row {
        display: flex;
        gap: 10px;
        margin-bottom: var(--spacing-4);
        flex-wrap: wrap;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        background: var(--color-background-200);
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-contrast);
    }

    .hero-badge.highlight {
        background: var(--color-contrast);
        color: var(--color-background);
    }

    .course-title {
        font-family: var(--font-family-headings);
        font-size: clamp(2.2rem, 5vw, 3.5rem);
        font-weight: 800;
        line-height: 1.1;
        color: var(--color-contrast);
        margin: 0 0 var(--spacing-4);
        letter-spacing: -0.02em;
    }

    .course-excerpt {
        font-size: 1.05rem;
        line-height: 1.6;
        color: var(--color-secondary);
        margin-bottom: var(--spacing-6);
        max-width: 42rem;
    }

    /* Social proof row */
    .hero-social-proof {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .hero-avatars {
        display: flex;
        margin-left: 4px;
    }

    .hero-avatar-dot {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #ddd;
        border: 2px solid var(--color-background);
        margin-left: -10px;
    }

    /* =========================================
       3. LEFT COLUMN CONTENT
       ========================================= */
    .section-title {
        font-family: var(--font-family-headings);
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-contrast);
        margin: 0 0 var(--spacing-6);
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .section-title svg {
        flex-shrink: 0;
    }
    
    /* What You'll Learn Items */
    .learn-title {
        font-weight: 700;
        color: var(--color-contrast);
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .learn-desc {
        font-size: 0.95rem;
        color: var(--color-secondary);
        line-height: 1.5;
        margin: 0;
    }

    /* Curriculum List */
    .curriculum-container {
        border: 1px solid var(--color-border);
        border-radius: var(--radius-4);
        background-color: var(--color-background);
        overflow: hidden;
    }

    .lesson-row {
        display: flex;
        align-items: center;
        padding: var(--spacing-4);
        border-bottom: 1px solid var(--color-border);
        text-decoration: none;
        transition:
            background-color 0.15s ease,
            border-color 0.15s ease,
            transform 0.15s ease,
            box-shadow 0.15s ease;
    }

    .lesson-row:last-child {
        border-bottom: none;
    }

    .lesson-row.unlocked:hover {
        background-color: var(--color-background-100);
        border-color: var(--color-contrast);
        transform: translateY(-1px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.06);
    }

    .lesson-row.locked {
        cursor: not-allowed;
        opacity: 0.8;
        background-color: var(--color-background-100);
    }

    .lesson-index {
        font-family: monospace;
        color: var(--color-secondary);
        margin-right: var(--spacing-4);
        font-size: 0.9rem;
        opacity: 0.6;
        flex-shrink: 0;
    }

    .lesson-title {
        font-weight: 600;
        color: var(--color-contrast);
        font-size: 0.95rem;
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .lesson-meta-row {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.8rem;
        color: var(--color-secondary);
        margin-top: 4px;
        flex-wrap: wrap;
    }

    .lesson-status-icon {
        margin-left: auto;
        color: var(--color-contrast);
        opacity: 0.3;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .lesson-row.unlocked .lesson-status-icon {
        opacity: 1;
        color: var(--color-success);
    }

    /* Testimonials */
    .testimony-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-5);
        margin-bottom: var(--spacing-9);
    }
    .testimony-card {
        background-color: var(--color-background-100);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-4);
        padding: var(--spacing-6);
        display: flex;
        flex-direction: column;
        gap: var(--spacing-3);
    }
    .testimony-header {
        display: flex;
        align-items: center;
        gap: var(--spacing-3);
    }
    .testimony-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        flex-shrink: 0;
    }
    .testimony-stars {
        color: #fbbf24;
        display: flex;
        gap: 2px;
        font-size: 0.8rem;
    }
    .testimony-body {
        font-size: 0.95rem;
        line-height: 1.6;
        font-style: italic;
        color: var(--color-foreground);
    }
    .testimony-author {
        font-size: 0.85rem;
        font-weight: 700;
        color: var(--color-contrast);
    }

    /* Prerequisites Box */
    .prereq-box {
        background-color: var(--color-background);
        border: 1px dashed var(--color-border);
        border-radius: var(--radius-4);
        padding: var(--spacing-6);
    }
    .prereq-list {
        margin: 0;
        padding-left: 1.5rem;
    }
    .prereq-list li {
        margin-bottom: 8px;
        color: var(--color-secondary);
    }

    /* =========================================
       4. RIGHT SIDEBAR (STICKY)
       ========================================= */
    .course-aside {
        position: sticky;
        top: 90px;
        display: flex;
        flex-direction: column;
        gap: var(--spacing-6);
    }
    
    /* Enrollment Card */
    .enroll-card {
        background: var(--color-background);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-4);
        overflow: hidden;
        box-shadow: var(--shadow);
    }

    .enroll-header {
        background: var(--color-background-100);
        padding: var(--spacing-5);
        border-bottom: 1px solid var(--color-border);
        text-align: center;
    }

    .enroll-price {
        font-family: var(--font-family-headings);
        font-size: 2rem;
        font-weight: 800;
        color: var(--color-contrast);
    }

    .enroll-price sub {
        font-size: 0.85rem;
        color: var(--color-secondary);
        text-decoration: line-through;
        margin-left: 6px;
        bottom: 0;
    }

    .enroll-body {
        padding: var(--spacing-6);
    }

    .enroll-btn {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 12px;
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: var(--spacing-4);
    }

    .button-primary {
        background: var(--ghost-accent-color);
        color: #fff;
        border-color: transparent;
    }

    .button-primary:hover {
        filter: brightness(1.05);
    }

    .feature-check-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .feature-check-list li {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.9rem;
        color: var(--color-foreground);
    }

    .feature-check-list svg {
        color: var(--color-success);
        flex-shrink: 0;
    }

    /* Instructor Mini Widget */
    .instructor-mini {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: var(--spacing-5);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-4);
        background: var(--color-background-100);
    }

    /* =========================================
       5. RESPONSIVE
       ========================================= */
    @media (max-width: 992px) {
        .course-layout {
            grid-template-columns: 1fr;
        }
        .hero-content-wrapper {
            grid-template-columns: 1fr;
        }
        .hero-media {
            order: -1;
            margin-top: 0;
        }
        .technical-grid,
        .testimony-grid {
            grid-template-columns: 1fr;
        }
        .course-aside {
            position: static;
            top: auto;
            order: -1;
            margin-bottom: var(--spacing-8);
        }
    }
    
    @media (max-width: 600px) {
        .course-hero {
            padding: var(--spacing-6) 0;
        }
        .course-wrapper {
            padding-inline: var(--spacing-4);
        }
        .testimony-card {
            padding: var(--spacing-5);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .lesson-row {
            transition: none;
        }
    }
</style>

{{!-- JSON-LD STRUCTURED DATA FOR COURSE --}}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Course",
    "name": "{{title}}",
    "description": "{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt}}{{/if}}",
    "provider": {
        "@type": "Organization",
        "name": "{{@site.title}}",
        "sameAs": "{{@site.url}}"
    },
    "author": {
        "@type": "Person",
        "name": "{{primary_author.name}}",
        "url": "{{primary_author.url}}"
    },
    "image": "{{#if feature_image}}{{img_url feature_image absolute="true"}}{{/if}}",
    "url": "{{url absolute="true"}}",
    "offers": {
        "@type": "Offer",
        "price": "{{#if access}}0{{else}}99{{/if}}",
        "priceCurrency": "USD",
        "availability": "https://schema.org/InStock",
        "url": "{{url absolute="true"}}"
    },
    "coursePrerequisites": [
        "Basic JavaScript knowledge",
        "Familiarity with HTML/CSS"
    ],
    "hasPart": [
        {{#get "posts" filter=(concat "tag:hash-lesson+tag:" primary_tag.slug) include="tags" limit="all" order="published_at asc" as |lessons|}}
            {{#foreach lessons}}
            {
                "@type": "CreativeWork",
                "name": "{{title}}",
                "url": "{{url absolute="true"}}"
            }{{#unless @last}},{{/unless}}
            {{/foreach}}
        {{/get}}
    ]
}
</script>

<div class="course-wrapper">

    <!-- HERO SECTION -->
    <header class="course-hero">
        <div class="course-hero-bg" aria-hidden="true"></div>
        
        <div class="hero-content-wrapper">
            
            <div class="hero-content">
                <div class="hero-badge-row">
                    {{#if access}}
                        <span class="hero-badge highlight">✅ Enrolled</span>
                    {{else}}
