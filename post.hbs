{{!< default}}

{{#post}}

  {{!-- Keep your old body-class logic --}}
  {{#contentFor "body-class"}}
    post-template-default
    {{#> "with-sidebar"}} post-has-sidebar{{/"with-sidebar"}}
    {{#unless access}} post-locked{{/unless}}
  {{/contentFor}}

  {{!-- Decide which layout to use based on internal tags --}}
  {{#match (post_class) "~" "tag-hash-courses-col"}}
    {{> "post/course"}}
  {{else match (post_class) "~" "tag-hash-lessons-col"}}
    {{> "post/lesson"}}
  {{else}}
    {{> "post/default"}}
  {{/match}}

{{/post}}
